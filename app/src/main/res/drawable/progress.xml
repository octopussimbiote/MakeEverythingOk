<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android">
<ripple android:color="?attr/colorControlHighlight">

    <item>
        <shape android:shape="rectangle">
        <size android:height="43dp" android:width="363dp"/>
            <solid android:color="#242829"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape>
            <size android:height="40dp" android:width="360dp"/>
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#499FAC"
                android:centerColor="#83ACAF"
                android:endColor="#499FAC"
                />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="3dp">
        <clip>
        <shape>
            <size android:height="40dp" android:width="360dp"/>
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#76CFDC"
                android:centerColor="#41A1AE"
                android:endColor="#76CFDC"
                />
        </shape>
        </clip>
    </item>

</ripple>
</inset>
