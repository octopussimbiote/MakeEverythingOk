<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <size android:height="50dp" android:width="365dp"/>
            <solid android:color="#D80C0C0C"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>



    <item android:id="@android:id/background" android:gravity="center">
        <shape>
            <size android:height="40dp" android:width="365dp"/>

            <corners android:radius="20dp" />
            <gradient
                android:startColor="#41A1AE"
                android:centerColor="#41A1AE"
                android:endColor="#27828F"
                />
        </shape>
    </item>



    <item android:id="@android:id/progress" android:gravity="center">
        <clip>
            <shape>
                <size android:height="30dp" android:width="350dp"/>

                <corners android:radius="10dp" />
                <gradient
                    android:startColor="#5F73C4"
                    android:centerColor="#5F73C4"
                    android:endColor="#B0BEF5"
                    />
            </shape>
        </clip>
    </item>



</layer-list>
